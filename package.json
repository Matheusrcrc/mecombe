{
  "name": "dashboard-mecobe-premium",
  "version": "2.0.0",
  "description": "Dashboard MECOBE - Sistema de Matriz de Segmentação Médica Premium",
  "main": "index.html",
  "scripts": {
    "start": "npx live-server --port=3000 --open=index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx cleancss -o styles.min.css styles.css",
    "minify-js": "npx terser dashboard.js -o dashboard.min.js --compress --mangle",
    "test": "npm run test:html && npm run test:accessibility",
    "test:html": "npx html-validate index.html",
    "test:accessibility": "npx pa11y index.html",
    "lighthouse": "npx lighthouse index.html --output=html --output-path=./docs/lighthouse-report.html",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "npx stylelint styles.css",
    "lint:js": "npx eslint dashboard.js",
    "format": "npx prettier --write *.html *.css *.js *.md",
    "serve": "npx http-server -p 3000 -c-1"
  },
  "keywords": [
    "dashboard",
    "medical",
    "healthcare",
    "segmentation",
    "matrix",
    "responsive",
    "accessible",
    "print"
  ],
  "author": "Sistema MECOBE",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "pa11y": "^7.0.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "terser": "^5.26.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matheusmachado/dashboard-mecobe-premium.git"
  },
  "bugs": {
    "url": "https://github.com/matheusmachado/dashboard-mecobe-premium/issues"
  },
  "homepage": "https://matheusmachado.github.io/dashboard-mecobe-premium"
}